@model EventEase.Models.Event

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.EventName)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.EventName)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.EventDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.EventDate)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Description)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.Description)</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.VenueName</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.EventId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

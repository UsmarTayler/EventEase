@model EventEase.Models.Venue

@{
    ViewData["Title"] = "Venue Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Venue Details</h2>

<div>
    <h4>@Model.VenueName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Capacity</dt>
        <dd class="col-sm-10">@Model.Capacity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="Venue image" width="300" style="object-fit: cover; border-radius: 6px;" />
                <br />
                <a href="@Model.ImageUrl" target="_blank">@Model.ImageUrl</a>
            }
            else
            {
                <span>No image uploaded</span>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.VenueId" class="btn btn-warning">Edit</a> |
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>


@model IEnumerable<EventEase.Models.Venue>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Venues List";
}

<h2>Venues</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.VenueName)</th>
            <th>@Html.DisplayNameFor(model => model.Location)</th>
            <th>@Html.DisplayNameFor(model => model.Capacity)</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.VenueName)</td>
                <td>@Html.DisplayFor(modelItem => item.Location)</td>
                <td>@Html.DisplayFor(modelItem => item.Capacity)</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <div style="text-align: center;">
                            <img src="@item.ImageUrl" alt="Venue image" width="120" height="80" style="object-fit: cover; border-radius: 6px;" />
                            <br />
                            <a href="@item.ImageUrl" target="_blank" style="font-size: 12px; display: inline-block; word-break: break-all;">
                                @item.ImageUrl
                            </a>
                        </div>
                    }
                    else
                    {
                        <span>No image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VenueId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.VenueId" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.VenueId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>



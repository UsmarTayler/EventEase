@model EventEase.Models.Booking

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Booking Details";
}

<h2>Booking Details</h2>
<hr />
<dl class="row">
    <dt class="col-sm-2">Event</dt>
    <dd class="col-sm-10">@Model.Event?.EventName</dd>

    <dt class="col-sm-2">Venue</dt>
    <dd class="col-sm-10">@Model.Venue?.VenueName</dd>

  

    <dt class="col-sm-2">@Html.DisplayNameFor(m => m.BookingDate)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(m => m.BookingDate)</dd>
</dl>

<div>
    <a asp-action="Edit" asp-route-id="@Model.BookingId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
